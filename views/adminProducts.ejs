<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>All Products</title>
    <link rel="stylesheet" href="/css/admin.css" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  </head>
  <body>
    <div class="page-header">
      <button class="back-btn" onclick="window.location.href='/admin'">
        Back
      </button>
      <h2>All Products</h2>
    </div>
    <div class="product-grid">
      <% if (products.length === 0) { %>
      <p>No products found</p>
      <% } %> <% products.forEach(p => { %>
      <div class="product-card" id="product-<%= p._id %>">
        <img src="<%= p.imagePath %>" alt="product" />

        <h3><%= p.name.toUpperCase() %></h3>

        <p><strong>Price:</strong> <%= p.price %></p>
        <p><strong>Quantity:</strong> <%= p.quantity %></p>
        <p><%= p.description %></p>

        <p>
          <strong>Category:</strong> <%=
          p.categoryId.name.charAt(0).toUpperCase()+p.categoryId.name.slice(1)
          %>
        </p>
        <p>
          <strong>Subcategory:</strong> <%=
          p.subcategory.charAt(0).toUpperCase()+p.subcategory.slice(1) %>
        </p>
        <p><strong>Seller:</strong> <%= p.sellerId.name %></p>

        <button class="delete-btn" data-id="<%= p._id %>">Delete</button>
      </div>
      <% }) %>
    </div>

    <script src="/jsExpress/adminProducts.js"></script>
  </body>
</html>
