<!DOCTYPE html>
<html>
  <head>
    <title>Profile</title>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="/css/profile.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
  </head>
  <body>
    <div class="profile-header">
      <i class="fa-solid fa-user"></i> Your Profile
      <button onclick="history.back()" class="back-btn"><i class="fa-solid fa-arrow-left"></i></button>
    </div>

    <div class="profile-wrapper">
      <div class="profile-card">
        <div class="section-title">Account Information</div>

        <div class="profile-field full-width readonly">
          <span class="label">Email</span>
          <span class="value"><%= user.email %></span>
          <span class="hint">Email cannot be changed</span>
        </div>

        <div class="section-title">Personal Information</div>

        <div class="profile-field">
          <span class="label">Name</span>
          <span class="value" id="nameText"><%= user.name %></span>
          <input type="text" id="name" value="<%= user.name %>" hidden />
        </div>

        <div class="profile-field">
          <span class="label">Phone</span>
          <span class="value" id="phoneText"><%= user.phone %></span>
          <input type="text" id="phone" value="<%= user.phone %>" hidden />
        </div>

        <div class="profile-field full-width">
          <span class="label">Address</span>
          <span class="value" id="addressText"><%= user.address %></span>
          <textarea id="address" hidden><%= user.address %></textarea>
        </div>

        <div class="profile-actions">
          <button id="editBtn">Edit Profile</button>
          <button id="saveBtn" hidden>Save Changes</button>
        </div>
      </div>
    </div>

    <script src="/jsExpress/profile.js"></script>
  </body>
</html>
